<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="16dp"
    tools:context=".AboutActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_my_picture"
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/fauzan_pahlawan" />

    <TextView
        android:id="@+id/tv_my_name"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_my_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        tools:text="Fauzan Pahlawan" />

    <TextView
        android:id="@+id/tv_my_email"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_my_name"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        tools:text="fauzan_pahlawan@gmail.com" />

</RelativeLayout>